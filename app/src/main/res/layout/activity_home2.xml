<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTint">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Form Data Penduduk"
        android:textColor="#ffffff"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="800dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bginput"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/txtNik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bgtext"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:hint="NIK"
            android:inputType="number"
            android:maxLength="16"
            android:minHeight="48dp"
            android:padding="17dp"
            android:textColor="#000000"
            android:textColorHint="#8A8080" />

        <EditText
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bgtext"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:maxLength="100"
            android:minHeight="48dp"
            android:padding="17dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bgtext"
            android:drawableRight="@drawable/ic_baseline_place_24"
            android:ems="10"
            android:hint="Tempat Lahir"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="17dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bgtext"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_date"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Tanggal Lahir"
            android:inputType="textPersonName"

            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="17dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bgtext"
            android:drawableRight="@drawable/ic_baseline_place_24"
            android:ems="10"
            android:hint="Alamat"
            android:inputType="textPersonName"
            android:maxLength="100"
            android:minHeight="48dp"
            android:padding="17dp"
            android:textColor="#000000"
            />

        <RadioGroup
            android:id="@+id/txtJk"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/txtPria"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:padding="17dp"
            android:background="@drawable/bgradio"
            android:button="@drawable/null_radio"
            />
            <RadioButton
                android:id="@+id/txtWanita"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Wanita"
                android:textAlignment="center"
                android:padding="17dp"
                android:button="@drawable/null_radio"
                android:background="@drawable/bgradio"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/txtJob"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/txtPns"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PNS"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/bgradio"
                android:button="@drawable/null_radio"
                />
            <RadioButton
                android:id="@+id/txtSwasta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Swasta"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/bgradio"
                android:button="@drawable/null_radio"
                />
            <RadioButton
                android:id="@+id/txtPelajar"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Pelajar"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/bgradio"
                android:button="@drawable/null_radio"
                />
            <RadioButton
                android:id="@+id/txtWiraswasta"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Wiraswasta"
                android:textAlignment="center"
                android:padding="5dp"
                android:button="@drawable/null_radio"
                android:background="@drawable/bgradio"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/txtS"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Kawin"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:padding="17dp"
                android:background="@drawable/bgradio"
                android:button="@drawable/null_radio"
                />
            <RadioButton
                android:id="@+id/txtD"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Belum Kawin"
                android:textAlignment="center"
                android:padding="17dp"
                android:button="@drawable/null_radio"
                android:background="@drawable/bgradio"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:textColor="@color/white"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:gravity="center"
            android:background="@drawable/bgbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>